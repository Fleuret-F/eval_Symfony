{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
<h1>Commentaire index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Message</th>
            <th>Date</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        {% for commentaire in commentaires %}
        <tr>
            <td>{{ commentaire.id }}</td>
            <td>{{ commentaire.message }}</td>
            <td>{{ commentaire.date ? commentaire.date|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ commentaire.note }}</td>

        </tr>
        {% else %}
        <tr>
            <td colspan="5">Pas de commentaires</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}