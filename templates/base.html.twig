                        d="m12 13.4l-4.9 4.9q-.275.275-.7.275t-.7-.275q-.275-.275-.275-.7t.275-.7l4.9-4.9l-4.9-4.9q-.275-.275-.275-.7t.275-.7q.275-.275.7-.275t.7.275l4.9 4.9l4.9-4.9q.275-.275.7-.275t.7.275q.275.275.275.7t-.275.7L13.4 12l4.9 4.9q.275.275.275.7t-.275.7q-.275.275-.7.275t-.7-.275L12 13.4Z" />
                </svg>
                </div>
                <!-- Ul bouton nav header -->
                <ul id="menu_burger">
                    <!-- Bouton profil  header -->
                    <li>
                        {# {{path('app_user_show') }} need id #}
                        <a href="">Profil</a>
                    </li>

                    <!-- Bouton coms header -->
                    <li>
                        <a href="">Mes commentaires</a>
                    </li>
                    <!-- Bouton articles header -->
                    <li>
                        {# {{path('app_article_show') }} need id #}
                        <a href="">Mes articles</a>
                    </li>
                    <li>
                        {% if is_granted('ROLE_USER')%}
                        <a href="{{path('app_article_new') }}">Poster un article</a>
                        {% endif %}

                    </li>
                    <li>
                        <a href="">se déconnecter</a>
                    </li>
                </ul>
                {% endif %}

            </nav>
        </header>

        {% endblock %}

        {% block body %}

        {% endblock %}
    </body>

</html>